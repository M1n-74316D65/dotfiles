{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "vim_mode": false,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "buffer_font_family": "CommitMono",
  "lsp": {
    "discord_presence": {
      "initialization_options": {
        "state": "Working with {language}",
        "details": "github.com/M1n-74316D65"
      }
    }
  }
}
