install_arch_packages() {
  echo "# Installing apps with paru"
  paru -Sy fish eza zoxide atuin starship piper zellij adw-gtk3-git pavucontrol zsh flatpak neovim lazygit easyeffects lsp-plugins
  flatpak install -y com.mattjakeman.ExtensionManager io.github.shiftey.Desktop cafe.avery.Delfin com.raggesilver.BlackBox com.vysp3r.ProtonPlus io.typora.Typora org.gtk.Gtk3theme.adw-gtk3 org.gtk.Gtk3theme.adw-gtk3-dark
}

install_paru() {
  echo "# Installing paru"
  sudo pacman -S --needed base-devel
  git clone https://aur.archlinux.org/paru.git
  cd paru
  makepkg -si
  cd ..
  rm -rf paru
}

install_fedora_packages() {
  echo "# Fedora detected"
  sudo dnf install -y https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm
  sudo dnf install -y https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm
  sudo dnf install -y fish zsh gnome-tweaks gstreamer1-plugins-{bad-\*,good-\*,base} gstreamer1-plugin-openh264 gstreamer1-libav --exclude=gstreamer1-plugins-bad-free-devel
  sudo dnf install -y lame\* --exclude=lame-devel
  sudo dnf group upgrade --with-optional Multimedia
  echo "# Installing my apps"
  sudo dnf install -y zsh adw-gtk3-theme pavucontrol ckb-next telegram-desktop neovim lazygit easyeffects lsp-plugins
  flatpak install -y com.mattjakeman.ExtensionManager com.discordapp.Discord io.github.shiftey.Desktop cafe.avery.Delfin com.raggesilver.BlackBox com.vysp3r.ProtonPlus io.typora.Typora org.gtk.Gtk3theme.adw-gtk3 org.gtk.Gtk3theme.adw-gtk3-dark
  curl -L --proto '=https' --tlsv1.2 -sSf https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh | bash
  cargo binstall eza zoxide atuin starship pastol --no-confirm
}

setup_rust() {
  echo "# Rust things"
  sudo hostnamectl set-hostname "M1n-Linux"
  # curl -fsSL https://raw.githubusercontent.com/zimfw/install/master/install.zsh | zsh
}

main() {
  if [ -f "/etc/arch-release" ]; then
    echo "# ARCH detected"
    if pacman -Qi paru >/dev/null; then
      install_arch_packages
    else
      install_paru
      install_arch_packages
    fi
  else
    install_fedora_packages
  fi

  setup_rust
}

main
