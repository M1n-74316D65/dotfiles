# Archlinux
if [ -f "/etc/arch-release" ]; then
  echo "# ARCH detected"
  if pacman -Qi paru >/dev/null; then
    echo "# Installing apps with paru"
    paru -Sy zsh flatpak neovim lazygit github-desktop-bin thorium-browser-bin easyeffects lsp-plugins anytype-bin
    flatpak install -y com.mattjakeman.ExtensionManager com.mattjakeman.ExtensionManager com.discordapp.Discord io.github.shiftey.Desktop cafe.avery.Delfin com.raggesilver.BlackBox com.spotify.Client com.vysp3r.ProtonPlus io.typora.Typora org.gtk.Gtk3theme.adw-gtk3 org.gtk.Gtk3theme.adw-gtk3-dark
  else
    echo "# Installing paru"
    sudo pacman -S --needed base-devel
    git clone https://aur.archlinux.org/paru.git
    cd paru
    makepkg -si
  fi
else
  # Fedora
  echo "# Fedora detected"
  sudo dnf install -y https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm
  sudo dnf install -y https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm
  sudo dnf install -y gnome-tweaks gstreamer1-plugins-{bad-\*,good-\*,base} gstreamer1-plugin-openh264 gstreamer1-libav --exclude=gstreamer1-plugins-bad-free-devel
  sudo dnf install -y lame\* --exclude=lame-devel
  sudo dnf group upgrade --with-optional Multimedia
  # My apps
  echo "# Installing my apps"
  sudo dnf install -y zsh adw-gtk3-theme neovim lazygit discord github-desktop-bin easyeffects lsp-plugins
  flatpak install -y com.mattjakeman.ExtensionManager com.mattjakeman.ExtensionManager com.discordapp.Discord io.github.shiftey.Desktop cafe.avery.Delfin com.raggesilver.BlackBox com.spotify.Client com.vysp3r.ProtonPlus io.typora.Typora org.gtk.Gtk3theme.adw-gtk3 org.gtk.Gtk3theme.adw-gtk3-dark
fi

# Rust things
echo "# Rust things"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
source "$HOME/.cargo/env.fish"
curl -L --proto '=https' --tlsv1.2 -sSf https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh | bash
cargo binstall eza zoxide atuin starship pastol --no-confirm

sudo hostnamectl set-hostname "M1n-Linux"
